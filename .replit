modules = ["python-3.12"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["gitFull", "libxcrypt", "playwright-driver"]

[deployment]
run = ["sh", "-c", "python -m uvicorn main:app --host 0.0.0.0 --port $PORT"]
build = ["sh", "-c", "python -m pip install -r requirements.txt && python -m playwright install chromium"]

[workflows]
runButton = "Run FastAPI"

[[workflows.workflow]]
name = "Run FastAPI"
author = 45821879
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m playwright install chromium"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload"

[[ports]]
localPort = 5000
externalPort = 80
